{
  "name": "js-app-boilerplate",
  "version": "1.4.0",
  "description": "",
  "scripts": {
    "dev": "nodemon src/index.js --exec babel-node",
    "start": "node lib/index.js",
    "build": "babel src --out-dir lib --copy-files",
    "test": "jest --onlyChanged --watch",
    "test:all": "jest",
    "flow": "flow",
    "format": "prettier --single-quote --trailing-comma all '{src,__{tests,mocks}__}/**/*.{js,jsx}' --write",
    "precommit": "lint-staged",
    "clean": "rimraf lib"
  },
  "author": "bob61016@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^8.2.3",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-babel-module": "^3.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "v5.1.1",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.59.0",
    "flow-typed": "^2.4.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.3",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "dotenv": "^5.0.1"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/env-setup.js",
      "<rootDir>/node_modules/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/env-setup.js"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn format",
      "git add"
    ]
  }
}
